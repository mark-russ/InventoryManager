<Window x:Class="Inventory_Manager.Windows.Window_Orders_UpdateQTY"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Update Quantity" Height="160" Width="300"  FocusManager.FocusedElement="{Binding ElementName=Box_Input}">
    <Grid>
        <DockPanel Margin="12" LastChildFill="False">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock FontWeight="Bold" Text="How many were ordered?" HorizontalAlignment="Center"/>
                <TextBox Margin="0 16" TextChanged="Box_Input_TextChanged" Name="Box_Input" Width="48" Padding="0 2" VerticalContentAlignment="Center" HorizontalAlignment="Center" KeyDown="Box_Input_KeyDown"/>
            </StackPanel>
            <Button Name="Button_Update" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Padding="24 4" Click="Button_Update_Click">Update</Button>
        </DockPanel>
    </Grid>
</Window>
